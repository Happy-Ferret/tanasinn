
ASCIIDOC=@ASCIIDOC@
OPEN=@COTERMINAL_OPEN@

all: usermanual-ja.html usermanual.html

usermanual.html: usermanual.txt
	cat $< > ../README
	cpp -D__EN__ $< | sed -e 's/^#.*//' | $(ASCIIDOC) - > $@ && $(OPEN) $@

usermanual-ja.html: usermanual.txt
	cat $< > ../README
	cpp $< | sed -e 's/^#.*//' | $(ASCIIDOC) - > $@ && $(OPEN) $@


CC=@CC@
ASCIIDOC=@ASCIIDOC@
OPEN=@TANASINN_OPEN@

ifdef $(CPP)
ifdef $(ASCIIDOC)
all: usermanual-ja.html usermanual.html
else
all:
endif
else
all:
endif

Makefile: Makefile.in
	cd .. && ./configure

usermanual.html: usermanual.txt Makefile
	if [ -a ( -n "$(ASCIIDOC)" ) ( -n "$(GCC)" ) ]; \
	then \
		$(RM) $@ && cat $< \
		| sed -e 's/#\/\//#\/#\//g;s/#\/\*/#\/#*/g' \
		| $(CC) -E -D__EN__ - \
		| sed -e 's/#\/#\//\/\//g;s/#\/#\*/\/*/g' \
		| sed -e 's/^#.*//' \
		| $(ASCIIDOC) - > $@; \
	fi

usermanual-ja.html: usermanual.txt Makefile
	if [ -a ( -n "$(ASCIIDOC)" ) ( -n "$(GCC)" ) ]; \
	then \
		$(RM) $@ && cat $< \
		| sed -e 's/#\/\//#\/#\//g;s/#\/\*/#\/#*/g' \
		| $(CC) -E -D__JP__ - \
		| sed -e 's/#\/#\//\/\//g;s/#\/#\*/\/*/g' \
		| sed -e 's/^#.*//' \
		| $(ASCIIDOC) - > $@; \
	fi

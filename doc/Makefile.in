
CPP=@CPP@
ASCIIDOC=@ASCIIDOC@
OPEN=@TANASINN_OPEN@
SOURCE=usermanual.txt
ASCIIDOCFLAGS= -a toc -a icons -a toc2 -a theme=flask --filter=ditaa
README_EN=README-en.asciidoc
README_JA=README-ja.asciidoc
HTML_EN=usermanual.html
HTML_JA=usermanual-ja.html

all: $(HTML_EN) $(HTML_JA)

Makefile: Makefile.in
	cd .. && ./configure

$(README_EN): $(SOURCE) Makefile.in
	if [ -n "$(CPP)" ]; \
	then \
		$(RM) $@ && cat $< \
		| $(CPP) -D__EN__ - \
		| sed -e 's:/#/://:g' \
		| sed -e 's/^#.*//' > $@ ; \
	fi

$(README_JA): $(SOURCE) Makefile.in
	if [ -n "$(CPP)" ]; \
	then \
		$(RM) $@ && cat $< \
		| $(CPP) -D__JP__ - \
		| sed -e 's:/#/://:g' \
		| sed -e 's/^#.*//' > $@ ; \
	fi

$(HTML_EN): $(README_EN)
	if [ -n "$(ASCIIDOC)" ]; \
	then \
		$(RM) $@ && $(ASCIIDOC) $(ASCIIDOCFLAGS) -o $@ $<; \
	fi

$(HTML_JA): $(README_JA)
	if [ -n "$(ASCIIDOC)" ]; \
	then \
		$(RM) $@ && $(ASCIIDOC) $(ASCIIDOCFLAGS) -o $@ $<; \
	fi

clean:
	$(RM) $(HTML_JA) $(HTML_EN) $(README_EN) $(README_JA)


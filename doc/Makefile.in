
ASCIIDOC=@ASCIIDOC@
OPEN=@COTERMINAL_OPEN@

all: usermanual-ja.html usermanual.html

Makefile: Makefile.in
	cd .. && ./configure

usermanual.html: usermanual.txt Makefile
	if [ -n "$(ASCIIDOC)" ]; \
	then \
		cat $< \
		| sed -e 's/#\/\//#\/#\//g;s/#\/\*/#\/#*/g' \
		| cpp -D__EN__ - \
		| sed -e 's/#\/#\//\/\//g;s/#\/\*/#\/*/g' \
		| sed -e 's/^#.*//' \
		| $(ASCIIDOC) - > $@; \
	fi

usermanual-ja.html: usermanual.txt Makefile
	if [ -n "$(ASCIIDOC)" ]; \
	then \
		cat $< \
		| sed -e 's/#\/\//#\/#\//g;s/#\/\*/#\/#*/g' \
		| cpp -D__JP__ - \
		| sed -e 's/#\/#\//\/\//g;s/#\/#\*/\/*/g' \
		| sed -e 's/^#.*//' \
		| $(ASCIIDOC) - > $@; \
	fi
